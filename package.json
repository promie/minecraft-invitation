{
  "name": "minecraft-invitation",
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "minecraft-invitation": "bin/minecraft-invitation.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "AWS_PROFILE=promie npm run build:infra && AWS_PROFILE=promie npx cdk deploy --all --require-approval never",
    "build:infra": "npm run build --workspace=@minecraft-invitation/infra",
    "deploy:infra": "AWS_PROFILE=promie npm run build:infra && AWS_PROFILE=promie npx cdk deploy --require-approval never",
    "diff": "AWS_PROFILE=promie npx cdk diff",
    "synth": "AWS_PROFILE=promie npx cdk synth",
    "destroy": "AWS_PROFILE=promie npx cdk destroy --all --force"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "20.14.9",
    "aws-cdk": "2.1031.2",
    "dotenv": "^17.2.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.215.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
}
