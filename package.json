{
  "name": "minecraft-invitation",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "minecraft-invitation": "bin/minecraft-invitation.js"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "build:infra": "npm run build -w @minecraft-invitation/infra",
    "build:frontend": "npm run build -w @minecraft-invitation/frontend",
    "dev": "npm run dev -w @minecraft-invitation/frontend",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "AWS_PROFILE=promie npm run build:frontend && AWS_PROFILE=promie npm run build:infra && AWS_PROFILE=promie npx cdk deploy --all --require-approval never",
    "deploy:infra": "AWS_PROFILE=promie npm run build:infra && AWS_PROFILE=promie npx cdk deploy --require-approval never",
    "diff": "AWS_PROFILE=promie npx cdk diff",
    "synth": "AWS_PROFILE=promie npx cdk synth",
    "destroy": "AWS_PROFILE=promie npx cdk destroy --all --force",
    "lint": "eslint .",
    "prettier:check": "prettier --check \"./**/*.{js,ts,tsx,json,css}\"",
    "prettier:write": "prettier --write \"./**/*.{js,ts,tsx,json,css}\""
  },
  "dependencies": {
    "aws-cdk-lib": "2.215.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "aws-cdk": "2.1031.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
